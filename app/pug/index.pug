extends layout/main

block title
  | CodeArty

block content
  #homepage-bg-animation
  .home-text
    .container
      .row
        .col-12
          .home-text__wrapper
            h1.home-text__title.js-typed-text.trn
              | We build digital
              br
              | products & services
            p.home-text__subtitle.trn We turn technologies and design into a solution for your business
            button.btn.btn-default.button--isi.js-show-popup.trn Start the project
  .pop-up
    .container
      .row
        .col-12
          .pop-up__bg
            span.pop-up__bg-text.trn Hello CodeArty
          span.pop-up__close.js-popup-close
          h2.pop-up__title.trn Discuss your project
          p.pop-up__subtitle.trn Go ahead, great things start with filling out this contact form
        .col-12
          form.list-form
            <!-- Hidden Required Fields -->
            <input type="hidden" name="project_name" value="CodeArty">
            <input type="hidden" name="admin_email" value="svenceruy@yahoo.com">
            <input type="hidden" name="form_subject" value="Get a quote form">
            <!-- END Hidden Required Fields -->
            .row
              .col-12.col-md-6
                .list-form__field
                  label(for='name').list-form__label.trn Your name
                  input(type='text')#name.list-form__name.list-form__input
              .col-12.col-md-6
                .list-form__field
                  label(for='email').list-form__label.trn Email address
                  input(type='email')#email.list-form__email.list-form__input
              .col-12.col-md-6
                .list-form__field
                  label(for='phone').list-form__label.trn Phone (optional)
                  input(type='tel', pattern="[0-9]")#phone.list-form__phone.list-form__input
              .col-12.col-md-6
                .list-form__field
                  label(for='company').list-form__label.trn Company
                  input(type='text')#company.list-form__company.list-form__input
              .col-12
                .list-form__field
                  label(for='idea').list-form__label.trn Tell us about your idea
                  textarea(rows='1')#idea.list-form__idea.list-form__input
              .col-12
                button.btn.btn-primary.trn Submit